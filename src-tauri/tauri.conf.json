{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Draconv",
  "version": "1.0-beta",
  "identifier": "draconv",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Draconv",
        "width": 800,
        "height": 600,
        "resizable": false,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "shortDescription": "A modern, free and open-source file converter.",
    "publisher": "Drackin",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "sidebarImage": "icons/sidebar.bmp"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Drackin/Draconv/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEJENTYxNTNBQTY0Rjc3RjkKUldUNWQwK21PaFZXdlJkcU1NV3QrTUo5OUJ2dGI1L1lvbHZsVDBTWDFJNnNVa1RnTFc3UzhyamsK"
    }
  }
}
